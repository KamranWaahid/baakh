# Baakh Next.js Environment Configuration
# Copy this file to .env.local and fill in your actual values

# =============================================================================
# SUPABASE CONFIGURATION
# =============================================================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key
SUPABASE_JWT_SECRET=your-supabase-jwt-secret

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# CSRF Protection
CSRF_SECRET=your-super-secret-csrf-key-here

# WAF (Web Application Firewall) Configuration
WAF_ENABLED=true
WAF_BLOCK_THRESHOLD=10
WAF_TIME_WINDOW=15
WAF_CHALLENGE_THRESHOLD=5
WAF_WHITELIST=127.0.0.1,::1
WAF_BLACKLIST=

# =============================================================================
# ADMIN CONFIGURATION
# =============================================================================
ADMIN_EMAIL_ALLOWLIST=admin1@example.com,admin2@example.com
AUTO_ELEVATE_ADMINS=false

# =============================================================================
# SECURITY ALERTS & MONITORING
# =============================================================================
ADMIN_EMAIL=admin@example.com
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/...
SECURITY_WEBHOOK_URL=https://your-webhook-endpoint.com/security

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================
# Test credentials for development/testing
TEST_USERNAME=testuser
TEST_PASSWORD=testpass

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000
CUSTOM_KEY=your-custom-key
